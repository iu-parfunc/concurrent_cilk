#!/bin/bash

# IU-specific setup.  This should be done elsewhere (.bashrc, Jenkins node config, etc):
# --------------------------------------------------------------------------------

if [ -d /u/parfunc/opt/ ]; then
  SHAREDSOFT=/u/parfunc/opt/
elif [ -d /u/crest-team/opt/ ]; then
  SHAREDSOFT=/u/crest-team/opt/
fi

if ! [ "$SHAREDSOFT" == "" ]; then
  export PATH=$SHAREDSOFT/bin/bin:$PATH
  export C_INCLUDE_PATH=$SHAREDSOFT/bin/include:$C_INCLUDE_PATH
  export CPLUS_INCLUDE_PATH=$SHAREDSOFT/bin/include:$CPLUS_INCLUDE_PATH
  export LIBRARY_PATH=$SHAREDSOFT/bin/lib:$LIBRARY_PATH
  export LD_LIBRARY_PATH=$SHAREDSOFT/bin/lib:$LD_LIBRARY_PATH
fi

if [ "$CONCURRENTCILK_CC" == "" ]; then 
  export CONCURRENTCILK_CC=clang
fi
if [ "$CONCURRENTCILK_CXX" == "" ]; then 
  export CONCURRENTCILK_CXX=clang++
fi
